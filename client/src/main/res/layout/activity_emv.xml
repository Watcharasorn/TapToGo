<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmvActivity">
    <!--1 显示回调内容-->
    <ScrollView
        android:id="@+id/scll_msg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_bts"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="result"
            android:textSize="20sp"
            />
    </ScrollView>

    <!--2 滚动按钮-->
    <ScrollView
        android:id="@+id/ll_bts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/scll_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <!--竖排-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            <!--参数界面-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_param"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >
                <!--金额-->
                <Button
                    android:id="@+id/bt_value"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_number_violet_shape"
                    style="@style/buttonNumberStyle"
                    android:text="@string/emv_title_amount"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <EditText
                    android:id="@+id/et_value"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text = "1"
                    android:inputType="number"
                    app:layout_constraintStart_toEndOf="@+id/bt_value"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bt_value"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--初始化-->
            <Button
                android:id="@+id/bt_emv_init"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_number_violet_shape"
                style="@style/buttonNumberStyle"
                android:layout_marginBottom="10dp"
                android:onClick="emvInit"
                android:text="@string/emv_init"
                 />

            <!--寻卡-->
            <Button
                android:id="@+id/bt_emv_detect"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_number_violet_shape"
                style="@style/buttonNumberStyle"
                android:layout_marginBottom="10dp"
                android:onClick="emvDetect"
                android:text="@string/emv_detect"
                android:enabled="false"
                 />

            <!--交易-->
            <Button
                android:id="@+id/bt_emv_transaction"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_number_violet_shape"
                style="@style/buttonNumberStyle"
                android:layout_marginBottom="10dp"
                android:onClick="emvTransaction"
                android:text="@string/emv_transaction"
                android:enabled="false"
                />

            <!--停止-->
            <Button
                android:id="@+id/bt_emv_close"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_number_violet_shape"
                style="@style/buttonNumberStyle"
                android:layout_marginBottom="10dp"
                android:onClick="emvClose"
                android:text="@string/emv_close"
                android:enabled="false"
                />
            <!--循环-->
            <Button
                android:id="@+id/bt_emv_loop"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_number_violet_shape"
                style="@style/buttonNumberStyle"
                android:layout_marginBottom="10dp"
                android:onClick="emvLoop"
                android:text="@string/emv_loop"
                android:enabled="false"
                />
            <!--关闭-->
            <Button
                android:id="@+id/bt_back"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_number_violet_shape"
                style="@style/buttonNumberStyle"
                android:onClick="back"
                android:text="@string/back"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>